{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/user.ts",
    "app/dashboard/nav.tsx",
    "app/u/routes/offers/page.tsx",
    "app/dashboard/routes/sell/page.jsx",
    "app/dashboard/routes/post/add-route.jsx",
    "app/u/routes/sell/post/routes.jsx",
    "app/dashboard/routes/requests/routes.jsx",
    "app/u/routes/offers/routes.jsx",
    "app/dashboard/director/users/users-table.jsx",
    "app/dashboard/director/users/users-table.jsx",
    "app/director/routes/post/AddRoutes.tsx",
    "app/api/emails/post-offer/emailTemplate.jsx",
    "app/u/routes/offers/post/PostRouteTable.tsx",
    "app/u/routes/offers/post/mailPostedOffers.js",
    "app/u/routes/offers/post/mailMatchingTargets.js",
    "app/u/routes/offers/post/mailPostedOffers.js",
    "app/u/routes/offers/post/mailMatchingTargets.jsx",
    "app/u/routes/offers/post/mailPostedOffers.jsx",
    "app/Toast.jsx",
    "app/test/HtmlToJson.jsx",
    "app/api/proxy/route.js",
    "next.config.js"
  ],
  "exclude": ["node_modules", ".next"]
}
